<UserControl
	x:Class="Chestnut_Pro.View.HashGeneratorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
	mc:Ignorable="d"
	d:DesignHeight="850"
	d:DesignWidth="1100">
    <UserControl.Resources>
        <Style
			x:Key="OutputContent"
			TargetType="{x:Type TextBox}"
			BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}">
            <Setter Property="FontWeight" Value="DemiBold" />
            <Setter Property="Height" Value="40" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="IsEnabled" Value="False" />
        </Style>
        <Style
			TargetType="{x:Type CheckBox}"
			BasedOn="{StaticResource MaterialDesignFilterChipPrimaryCheckBox}">
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="IsChecked" Value="True" />
            <Setter Property="Margin" Value="0 0 30 0" />
            <Setter Property="Width" Value="80" />
        </Style>
        <Style
			x:Key="CommonButtonStyle"
			TargetType="{x:Type Button}"
			BasedOn="{StaticResource MaterialDesignOutlinedSecondaryDarkButton}">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderThickness" Value="1,1,1,1" />
            <Setter Property="Width" Value="50" />
            <Setter Property="Height" Value="30" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="BorderBrush" Value="#C8C8C8" />
        </Style>
    </UserControl.Resources>
    <Border
		BorderBrush="#C8C8C8"
		Background="#FCFCFC"
		BorderThickness="1,1,1,1"
		CornerRadius="5">
        <Grid
			Margin="5">
            <StackPanel
				Background="#FCFCFC">
                <!--Header-->
                <Grid
					Height="60">
                    <!--Title-->
                    <TextBlock
						Style="{StaticResource ControlTitleTextStyle}"
						Text="Hash Generator" />
                </Grid>
                <!--Configuration-->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
							Width="30" />
                        <ColumnDefinition
							Width="1000" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition
							Height="50" />
                        <RowDefinition
							Height="80" />
                        <RowDefinition
							Height="80" />
                    </Grid.RowDefinitions>
                    <!-- Configuration Title -->
                    <TextBlock
                        Grid.Row="0"
						Grid.Column="1"
						Style="{StaticResource ConfigurationTitleTextStyle}"
						Text="Configuration" />
                    <!-- Configuration:Uppercase -->
                    <WrapPanel
                            Grid.Row="1"
						    Grid.Column="1"
							HorizontalAlignment="Left">
                        <Border
								BorderBrush="#C8C8C8"
								Background="White"
								BorderThickness="1,1,1,1"
								CornerRadius="5">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition
												Width="25" />
                                        <ColumnDefinition
												Width="100" />
                                        <ColumnDefinition
												Width="300" />
                                        <ColumnDefinition
												Width="580" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition
												Height="60" />
                                    </Grid.RowDefinitions>
                                    <materialDesign:PackIcon
                                            Grid.Row="0"
											Grid.Column="1"
											Style="{StaticResource ConfigTag}"
											Kind="FormatLetterCaseUpper" />
                                    <TextBlock
                                            Grid.Row="0"
											Grid.Column="2"
											Style="{StaticResource Content}"
											Text="Uppercase" />
                                    <CheckBox
											x:Name="Uppercase_Button"
                                            Grid.Row="0"
											Grid.Column="3"
											IsChecked="{Binding Uppercase}"
											Content="Uppercase"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </WrapPanel>
                    <!-- Configuration:Output Type -->
                    <WrapPanel
                            Grid.Row="2"
						    Grid.Column="1"
							HorizontalAlignment="Left">
                        <Border
								BorderBrush="#C8C8C8"
								Background="White"
								BorderThickness="1,1,1,1"
								CornerRadius="5">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition
												Width="25" />
                                        <ColumnDefinition
												Width="100" />
                                        <ColumnDefinition
												Width="200" />
                                        <ColumnDefinition
												Width="680" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition
												Height="60" />
                                    </Grid.RowDefinitions>
                                    <materialDesign:PackIcon
                                        Grid.Row="0"
										Grid.Column="1"
										Style="{StaticResource ConfigTag}"
										Kind="FormatListBulletedType" />
                                    <TextBlock
                                        Grid.Row="0"
										Grid.Column="2"
										Style="{StaticResource Content}"
										Text="Output Type" />
                                    <ComboBox
										Grid.Row="0"
										Grid.Column="3"
										x:Name="OutputTypeSelected"
										Width="80"
										materialDesign:HintAssist.Hint="Decimal"
										HorizontalAlignment="Right"
										VerticalAlignment="Center"
										Margin="0 0 30 0">
                                        <ComboBoxItem
											Content="Hex"
                                            IsSelected="True"/>
                                        <ComboBoxItem
											Content="Base64" />
                                    </ComboBox>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </WrapPanel>
                </Grid>
                <!--Input&Output-->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
							Width="30" />
                        <ColumnDefinition
							Width="1000" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition
							Height="40" />
                        <RowDefinition
							Height="120" />
                        <RowDefinition
							Height="60" />
                        <RowDefinition
							Height="40" />
                        <RowDefinition
							Height="40" />
                        <RowDefinition
							Height="40" />
                        <RowDefinition
							Height="40" />
                        <RowDefinition
							Height="40" />
                        <RowDefinition
							Height="40" />
                        <RowDefinition
							Height="40" />
                    </Grid.RowDefinitions>
                    <!--Input-->
                    <Grid
						Grid.Row="0"
						Grid.Column="1">
                        <TextBlock
							Style="{StaticResource ConfigurationTitleTextStyle}"
							Text="Input" />
                        <Button
							Style="{StaticResource CommonButtonStyle}"
							Content="{materialDesign:PackIcon CursorDefaultClick}"
							ToolTip="Convert"
                            Margin="0 0 120 0"
                            CommandParameter="{Binding ElementName=OutputTypeSelected, Path=Text}"
                            Command="{Binding ConvertCommand}"/>
                        <Button
							Content="{materialDesign:PackIcon ContentCopy}"
							ToolTip="Copy"
							Style="{StaticResource CommonButtonStyle}"
							Margin="0 0 60 0"
                            CommandParameter="{Binding ElementName=SourceInput, Path=Text}"
							Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=DataContext.CopyCommand}"/>
                        <Button
							Content="{materialDesign:PackIcon Close}"
							ToolTip="Clear"
							Style="{StaticResource CommonButtonStyle}"
                            Command="{Binding ClearCommand}"/>
                    </Grid>
                    <TextBox
						x:Name="SourceInput"
                        Grid.Row="1"
						Grid.Column="1"
                        Text="{Binding InputText}"
						materialDesign:HintAssist.Hint="Text Input"
						Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Height="120"
                        BorderBrush="#C8C8C8"
						VerticalAlignment="Center" />
                    <!--MD5-->
                    <TextBlock
                        Grid.Row="2"
						Grid.Column="1"
						Style="{StaticResource InputOutputTitle}"
						Text="MD5" />
                    <StackPanel
                        Grid.Row="3"
						Grid.Column="1"
                        Orientation="Horizontal">
                        <TextBox
							x:Name="MD5Output"
                            Width="925"
                            Text="{Binding MD5Output}"
							Style="{StaticResource OutputContent}" />
                        <Button
							Content="{materialDesign:PackIcon ContentCopy}"
                            Style="{StaticResource CommonButtonStyle}"
                            VerticalAlignment="Bottom"
                            Margin="25 0 0 0"
							ToolTip="Copy"
                            CommandParameter="{Binding ElementName=MD5Output, Path=Text}"
							Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=DataContext.CopyCommand}"/>
                    </StackPanel>
                    <!--SHA1-->
                    <TextBlock
                        Grid.Row="4"
						Grid.Column="1"
						Style="{StaticResource InputOutputTitle}"
						Text="SHA1"/>
                    <StackPanel
                            Grid.Row="5"
						    Grid.Column="1"
                            Orientation="Horizontal">
                        <TextBox
							x:Name="SHA1Output"
                            Width="925"
                            Text="{Binding SHA1Output}"
							Style="{StaticResource OutputContent}" />
                        <Button
							Content="{materialDesign:PackIcon ContentCopy}"
                            Style="{StaticResource CommonButtonStyle}"
                            VerticalAlignment="Bottom"
                            Margin="25 0 0 0"
							ToolTip="Copy"
                            CommandParameter="{Binding ElementName=SHA1Output, Path=Text}"
							Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=DataContext.CopyCommand}"/>
                    </StackPanel>
                    <!--SHA256-->
                    <TextBlock
                        Grid.Row="6"
						Grid.Column="1"
						Style="{StaticResource InputOutputTitle}"
						Text="SHA256" />
                    <StackPanel
                        Grid.Row="7"
						Grid.Column="1"
                        Orientation="Horizontal">
                        <TextBox
							x:Name="SHA256Output"
                            Width="925"
                            Text="{Binding SHA256Output}"
							Style="{StaticResource OutputContent}" />
                        <Button
							Content="{materialDesign:PackIcon ContentCopy}"
                            Style="{StaticResource CommonButtonStyle}"
                            VerticalAlignment="Bottom"
                            Margin="25 0 0 0"
							ToolTip="Copy"
                            CommandParameter="{Binding ElementName=SHA256Output, Path=Text}"
							Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=DataContext.CopyCommand}"/>
                    </StackPanel>
                    <!--SHA512-->
                    <TextBlock
                        Grid.Row="8"
						Grid.Column="1"
						Style="{StaticResource InputOutputTitle}"
						Text="SHA512" />
                    <StackPanel
                        Grid.Row="9"
						Grid.Column="1"
                        Orientation="Horizontal">
                        <TextBox
							x:Name="SHA512Output"
                            Width="925"
                            Text="{Binding SHA512Output}"
							Style="{StaticResource OutputContent}" />
                        <Button
							Content="{materialDesign:PackIcon ContentCopy}"
                            Style="{StaticResource CommonButtonStyle}"
                            VerticalAlignment="Bottom"
                            Margin="25 0 0 0"
							ToolTip="Copy"
                            CommandParameter="{Binding ElementName=SHA512Output, Path=Text}"
							Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=DataContext.CopyCommand}"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>