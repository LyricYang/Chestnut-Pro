<Window
	x:Class="Chestnut_Pro.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Chestnut_Pro.ViewModel"
	mc:Ignorable="d"
	Title="Chestnut Pro"
	Height="880"
	Width="1330"
	x:Name="DashboardWindow"
	WindowStartupLocation="CenterScreen"
	ResizeMode="CanResize">
    <!--Setting the DataContext (Binding Source)-->
    <Window.DataContext>
        <vm:NavigationViewModel />
    </Window.DataContext>
    <Grid>
        <!--Background Border-->
        <Border
			Background="White" />
        <!--Content Grid-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition
					Width="25" />
                <ColumnDefinition
					Width="180" />
                <ColumnDefinition
					Width="10" />
                <ColumnDefinition
					Width="660" />
                <ColumnDefinition
					Width="25" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition
					Height="0" />
                <RowDefinition
					Height="10" />
                <RowDefinition
					Height="55" />
                <RowDefinition
					Height="370" />
                <RowDefinition
					Height="0" />
            </Grid.RowDefinitions>
            <!--Menu Search Box-->
            <Grid
				Grid.Row="2"
				Grid.Column="1">
                <TextBox
					x:Name="SearchBox"
					Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
					Style="{StaticResource SearchBoxStyle}" />
                <TextBlock
					Text="Type to search..."
					Style="{StaticResource SearchTextStyle}" />
            </Grid>
            <!--Menu-->
            <Grid
				Grid.Row="3"
				Grid.Column="1"
				Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
						Width="41*" />
                    <ColumnDefinition
						Width="139*" />
                </Grid.ColumnDefinitions>
                <ItemsControl
					ItemsSource="{Binding SourceCollection}"
					Grid.ColumnSpan="2">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <RadioButton
									Content="{Binding MenuName}"
									Tag="{Binding MenuImage}"
									CommandParameter="{Binding MenuName}"
									Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}, Path=DataContext.MenuCommand}"
									Style="{StaticResource MenuButtonStyle}"
									GroupName="MenuGroup" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
            <!--Page Container-->
            <Grid
				Grid.Row="2"
				Grid.Column="3"
				Grid.RowSpan="2"
				Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
						Width="41*" />
                    <ColumnDefinition
						Width="179*" />
                </Grid.ColumnDefinitions>
                <ContentControl
					x:Name="Pages"
					Content="{Binding SelectedViewModel}"
					Margin="0,0,-440,-415"
					Grid.ColumnSpan="2" />
            </Grid>
        </Grid>
    </Grid>
</Window>